;           Inputs  ________________________
;           Outputs ________________________

C.467E: PUSH    AF
        PUSH    HL
        PUSH    BC
J$4681: LD      HL,001FFH
J$4684: DEC     HL
        LD      A,L
        OR      H
        JR      NZ,J$4684
        DEC     B
        JR      NZ,J$4681
        POP     BC
        POP     HL
        POP     AF
        RET

?.4690: CALL    C.465A                  ; select track 0
        JR      J$469B

;        Subroutine __________________________
;           Inputs  ________________________
;           Outputs ________________________

C.4695: LD      B,A
        LD      A,(D$7FB9)
        CP      B                       ; already on track ?
        RET     Z
J$469B: LD      A,B
        LD      (D.7FBB),A              ; set track
        LD      A,12H                   ; select track
        LD      (D.7FB8),A
        CALL    C.46BB                  ; wait
        CALL    C.46C2                  ; wait for FDC
J$46AA: LD      A,(D.7FB8)
        BIT     0,A
        JR      NZ,J$46AA
        BIT     4,A
        JR      NZ,C.4695
        LD      B,0AH
        CALL    C.467E                  ; ?? delay
        RET

C.46BB: NOP
        NOP
        NOP
        NOP
        NOP
        NOP
        RET

